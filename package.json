{
  "name": "green-api-test-interface",
  "version": "1.0.0",
  "description": "Modern WhatsApp API Integration Test Interface for GREEN-API",
  "main": "index.html",
  "scripts": {
    "start": "serve -s . -l 8000",
    "dev": "serve -s . -l 3000",
    "build": "npm run minify && npm run optimize",
    "minify": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o dist/styles/main.min.css styles/main.css",
    "minify:js": "terser js/app.js -o dist/js/app.min.js -c -m",
    "optimize": "npm run optimize:images && npm run generate:icons",
    "optimize:images": "imagemin assets/**/* --out-dir=dist/assets",
    "generate:icons": "node scripts/generate-icons.js",
    "test": "npm run test:lighthouse && npm run test:accessibility",
    "test:lighthouse": "lighthouse http://localhost:8000 --output=json --output-path=reports/lighthouse.json",
    "test:accessibility": "pa11y http://localhost:8000",
    "deploy": "npm run build && npm run deploy:netlify",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "deploy:gh-pages": "gh-pages -d .",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint styles/**/*.css",
    "lint:js": "eslint js/**/*.js",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "validate": "html-validate index.html",
    "security": "npm audit && npm run security:snyk",
    "security:snyk": "snyk test",
    "pwa:audit": "pwa-audit http://localhost:8000",
    "performance": "bundlesize",
    "clean": "rimraf dist reports",
    "prebuild": "npm run clean && mkdir -p dist/styles dist/js dist/assets",
    "postbuild": "npm run test:lighthouse",
    "precommit": "npm run lint && npm run validate && npm run test",
    "release": "npm version patch && git push && git push --tags"
  },
  "keywords": [
    "green-api",
    "whatsapp",
    "api",
    "test",
    "interface",
    "pwa",
    "modern",
    "responsive",
    "javascript",
    "css-grid",
    "service-worker"
  ],
  "author": {
    "name": "GREEN-API Test Developer",
    "email": "hr@green-api.com",
    "url": "https://green-api.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheMacroeconomicDao/green-api-test-task.git"
  },
  "bugs": {
    "url": "https://github.com/TheMacroeconomicDao/green-api-test-task/issues"
  },
  "homepage": "https://themacroeconomicdao.github.io/green-api-test-task",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "gh-pages": "^6.0.0",
    "html-validate": "^8.5.0",
    "imagemin": "^8.0.1",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-mozjpeg": "^10.0.0",
    "lighthouse": "^11.0.0",
    "netlify-cli": "^16.0.0",
    "pa11y": "^7.0.0",
    "prettier": "^3.0.3",
    "pwa-audit": "^1.0.0",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "snyk": "^1.1200.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "terser": "^5.19.4"
  },
  "dependencies": {},
  "bundlesize": [
    {
      "path": "styles/main.css",
      "maxSize": "50kb",
      "compression": "gzip"
    },
    {
      "path": "js/app.js", 
      "maxSize": "30kb",
      "compression": "gzip"
    }
  ],
  "lighthouse": {
    "ci": {
      "collect": {
        "settings": {
          "chromeFlags": "--no-sandbox"
        }
      },
      "assert": {
        "assertions": {
          "categories:performance": ["error", {"minScore": 0.9}],
          "categories:accessibility": ["error", {"minScore": 1}],
          "categories:best-practices": ["error", {"minScore": 0.95}],
          "categories:seo": ["error", {"minScore": 0.9}],
          "categories:pwa": ["error", {"minScore": 0.9}]
        }
      }
    }
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "browser": true,
      "es2022": true,
      "serviceworker": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "prefer-const": "error"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "declaration-empty-line-before": null,
      "custom-property-empty-line-before": null
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/green-api"
  }
} 